<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebb42c"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:id="@+id/splash_circle"
        />
    <ImageView
        android:id="@+id/splash_iv"
        android:layout_width="44dp"
        android:layout_height="36.9dp"

        android:src="@drawable/applogo"
        app:layout_constraintTop_toTopOf="@id/splash_circle"
        app:layout_constraintLeft_toLeftOf="@id/splash_circle"
        app:layout_constraintRight_toRightOf="@id/splash_circle"
        app:layout_constraintBottom_toBottomOf="@id/splash_circle"
         />

    <TextView
        android:id="@+id/splash_tv1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Studify"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="공부를 공유하다"
        android:fontFamily="@font/nanumgothic_regular"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/splash_tv1" />
</android.support.constraint.ConstraintLayout>