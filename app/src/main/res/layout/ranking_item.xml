<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="#fff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ranking_pic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:src="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/nanumgothic_bold"
        android:lineSpacingExtra="2sp"
        android:text="김민준"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ranking_pic"
        app:layout_constraintLeft_toRightOf="@id/ranking_pic"
        app:layout_constraintTop_toTopOf="@id/ranking_pic" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebb42c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nanumgothic_regular"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="12sp"
        android:text="02 : 21 : 47"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ranking_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="12sp"
        android:text="04 : 38 : 09"
        android:textColor="#d9a31a"
        android:textSize="8sp"
        android:fontFamily="@font/nanumgothic_regular"
        app:layout_constraintBottom_toBottomOf="@id/ranking_pic"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>