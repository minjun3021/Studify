<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d4b74"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="164dp"
        android:src="@drawable/applogo"
        android:id="@+id/login_iv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_iv"
        android:text="Studify?"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:id="@+id/login_tv1"
        android:fontFamily="@font/roboto_medium"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumgothic_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_tv1"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Studify는\n효율적인 학습 및 집중력 향상과\n공부 자극을 도와주는 솔루션입니다.\n애플리케이션을 통해 사용자에게\n다양한 기능을 제공합니다."
        />
</android.support.constraint.ConstraintLayout>